<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" >

	<ImageView
		android:id="@+id/image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp" />

	<TextView
		android:id="@+id/text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		android:layout_toRightOf="@+id/image"/>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:srcCompat="@android:drawable/stat_sys_download"
		android:layout_marginTop="44dp"
		android:id="@+id/download_button"
		android:tint="@color/blue"
		android:layout_marginStart="13dp"
		android:layout_below="@+id/image"
		/>

	<TextView
		android:text="download track"
		android:textSize="17dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/download_text"
		android:layout_alignBottom="@+id/download_button"
		android:layout_alignStart="@+id/fbshare_text"
		android:layout_marginBottom="11dp"/>

	<TextView
		android:text="share on facebook"
		android:textSize="17dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="39dp"
		android:id="@+id/fbshare_text"
		android:layout_alignTop="@+id/fbshare_button"
		android:layout_toEndOf="@+id/fbshare_button"
		android:layout_marginTop="11dp"/>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:srcCompat="@android:drawable/ic_menu_share"
		android:layout_marginTop="12dp"
		android:id="@+id/fbshare_button"
		android:tint="@color/blue"
		android:layout_below="@+id/download_text"
		android:layout_alignStart="@+id/download_button"/>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:srcCompat="@drawable/lb_ic_thumb_up"
		android:tint="@color/blue"
		android:layout_below="@+id/fbshare_button"
		android:layout_alignStart="@+id/fbshare_button"
		android:layout_marginBottom="30dp"
		android:layout_marginTop="12dp"
		android:id="@+id/fblike_button"/>

	<TextView
		android:text="facebook like"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="17dp"
		android:id="@+id/fblike_text"
		android:layout_alignBottom="@+id/fblike_button"
		android:layout_alignStart="@+id/fbshare_text"
		android:layout_marginBottom="17dp"/>

</RelativeLayout>